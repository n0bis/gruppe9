<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootId" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.QuizController">
   <children>
      <FlowPane fx:id="flowPane" columnHalignment="CENTER" maxWidth="250.0" minHeight="480.0" minWidth="150.0">
         <children>
            <Label fx:id="labelTitle" text="Ny SMS modtaget:" wrapText="true">
               <effect>
                  <Glow />
               </effect>
               <font>
                  <Font size="16.0" />
               </font>
               <FlowPane.margin>
                  <Insets bottom="10.0" left="10.0" top="40.0" />
               </FlowPane.margin>
            </Label>
            <TextArea fx:id="smsTextbox" editable="false" prefHeight="231.0" prefWidth="228.0" text="Hej Player! Kan du huske hvilket lokale vi har COS undervisning i?" wrapText="true">
               <font>
                  <Font size="14.0" />
               </font>
               <FlowPane.margin>
                  <Insets left="10.0" />
               </FlowPane.margin>
            </TextArea>
            <Button fx:id="closeButton" mnemonicParsing="false" onMouseClicked="#closeButtonClicked" opacity="0.0" text="Luk besked">
               <FlowPane.margin>
                  <Insets left="15.0" top="5.0" />
               </FlowPane.margin>
            </Button>
            <TextField fx:id="writtenText" alignment="TOP_CENTER" prefWidth="149.0" />
         </children>
      </FlowPane>
      <Button fx:id="sendButton" alignment="TOP_CENTER" layoutX="186.0" layoutY="334.0" mnemonicParsing="false" onMouseClicked="#sendMessage" text="Send" />
   </children>
</AnchorPane>
