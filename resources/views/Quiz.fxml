<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootId" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.QuizController">
   <children>
      <FlowPane fx:id="flowPane" columnHalignment="CENTER" maxWidth="250.0" minHeight="480.0" minWidth="150.0">
         <children>
            <Label fx:id="labelTitle" text="Ny SMS modtaget:" wrapText="true">
               <effect>
                  <Glow />
               </effect>
               <font>
                  <Font size="16.0" />
               </font>
               <FlowPane.margin>
                  <Insets bottom="10.0" left="10.0" top="40.0" />
               </FlowPane.margin>
            </Label>
            <TextArea fx:id="smsTextbox" editable="false" prefHeight="231.0" prefWidth="228.0" text="Hej Player! Kan du huske hvilket lokale vi har COS undervisning i?" wrapText="true">
               <font>
                  <Font size="14.0" />
               </font>
               <FlowPane.margin>
                  <Insets left="10.0" />
               </FlowPane.margin>
            </TextArea>
            <Button fx:id="leftAnswer" mnemonicParsing="false" onMouseClicked="#leftAnswerClicked" text="U55">
               <FlowPane.margin>
                  <Insets left="15.0" top="5.0" />
               </FlowPane.margin>
            </Button>
            <Button fx:id="rightAnswer" mnemonicParsing="false" onMouseClicked="#rightAnswerClicked" text="U45">
               <FlowPane.margin>
                  <Insets left="15.0" top="5.0" />
               </FlowPane.margin>
            </Button>
            <Button fx:id="closeButton" mnemonicParsing="false" onMouseClicked="#closeButtonClicked" opacity="0.0" text="Luk besked">
               <FlowPane.margin>
                  <Insets left="15.0" top="5.0" />
               </FlowPane.margin>
            </Button>
         </children>
      </FlowPane>
   </children>
</AnchorPane>
